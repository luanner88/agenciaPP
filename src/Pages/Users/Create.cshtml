@page
@model Agenciapp.Pages.Offices.Users.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="User.UserId" class="control-label"></label>
                <input asp-for="User.UserId" class="form-control" />
                <span asp-validation-for="User.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Name" class="control-label"></label>
                <input asp-for="User.Name" class="form-control" />
                <span asp-validation-for="User.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Email" class="control-label"></label>
                <input asp-for="User.Email" class="form-control" />
                <span asp-validation-for="User.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="User.EmailConfirmed" /> @Html.DisplayNameFor(model => model.EmailConfirmed))
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="User.PasswordHash" class="control-label"></label>
                <input asp-for="User.PasswordHash" class="form-control" />
                <span asp-validation-for="User.PasswordHash" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.PasswordSalt" class="control-label"></label>
                <input asp-for="User.PasswordSalt" class="form-control" />
                <span asp-validation-for="User.PasswordSalt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.SecureCode" class="control-label"></label>
                <input asp-for="User.SecureCode" class="form-control" />
                <span asp-validation-for="User.SecureCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.ExpiresSecureCode" class="control-label"></label>
                <input asp-for="User.ExpiresSecureCode" class="form-control" />
                <span asp-validation-for="User.ExpiresSecureCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Status" class="control-label"></label>
                <input asp-for="User.Status" class="form-control" />
                <span asp-validation-for="User.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Type" class="control-label"></label>
                <input asp-for="User.Type" class="form-control" />
                <span asp-validation-for="User.Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.AccountId" class="control-label"></label>
                <input asp-for="User.AccountId" class="form-control" />
                <span asp-validation-for="User.AccountId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Timestamp" class="control-label"></label>
                <input asp-for="User.Timestamp" class="form-control" />
                <span asp-validation-for="User.Timestamp" class="text-danger"></span>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <input asp-for="@Model.Phone" class="form-control" placeholder="Tel. Oficina"></input>
                        <span asp-validation-for="@Model.Phone" class="text-danger"></span>
                    </div>
                </div>

            </div>
            <div class="form-group">
                <textarea asp-for="@Model.Address" placeholder="Dirección" class="form-control"></textarea>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <select asp-for="@Model.State" class="form-control">
                        <option></option>
                        <option value="Florida">Florida</option>
                    </select>
                </div>
            </div>

            <div class="col-md-6">
                <div class="form-group">
                    <select asp-for="@Model.City" class="form-control">
                        <option></option>
                        <option value="Miami">Florida</option>
                    </select>
                </div>

            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
