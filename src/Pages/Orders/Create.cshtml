@model Agenciapp.Pages.Orders.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Datos de la Orden</h4>
                        <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                        <div class="heading-elements">
                            <ul class="list-inline mb-0">
                                <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                <li><a data-action="close"><i class="ft-x"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body collapse in">
                        <div class="card-block">
                            <div class="row">
                                <div class="row">
                                    <div class="col-md-6">


                                        <div class="form-group row ">
                                            <select asp-for="Order.TipoPagoId" class="form-control hide-search-pago" id="hide_search" asp-items="ViewBag.TipoPagoId" name="TipoPago"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group row ">
                                            <select asp-for="Order.Type" class="form-control hide-search-paquete" id="hide_search" placeholder="Tipo de paquete">
                                                <option value="Mixto">Mixto</option>
                                                <option value="Paquete">Paquete</option>
                                                <option value="Alimentos">Alimentos</option>
                                                <option value="Medicina">Comida</option>
                                                <option value="Remesas">Remesas</option>
                                            </select>
                                            <span asp-validation-for="Order.Type" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <select asp-for="@Model.listVA" class="col-md-6 select2-placeholder-valor form-control" multiple="multiple" asp-items="ViewBag.ValorAduanalId"></select>
                                </div>



                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Costos</h4>
                        <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                        <div class="heading-elements">
                            <ul class="list-inline mb-0">
                                <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
