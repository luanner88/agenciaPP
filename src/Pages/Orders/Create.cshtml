                                        <span asp-validation-for="Order.OtrosCostos" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group ">
                                        <label asp-for="Order.ValorPagado" class="control-label"></label>

                                        <input asp-for="Order.ValorPagado" placeholder="Valor Pagado" class="form-control" type="number" />
                                        <span asp-validation-for="Order.ValorPagado" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Productos</h4>
                        <a class="heading-elements-toggle"><i class="fa fa-ellipsis-v font-medium-3"></i></a>
                        <div class="heading-elements">
                            <ul class="list-inline mb-0">
                                <li><a data-action="collapse"><i class="ft-minus"></i></a></li>
                                <li><a data-action="reload"><i class="ft-rotate-cw"></i></a></li>
                                <li><a data-action="expand"><i class="ft-maximize"></i></a></li>
                                <li><a data-action="close"><i class="ft-x"></i></a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="card-body collapse in">
                        <div class="card-block">
                            <div class="row">

                                <div class="form-group row">
                                    <div class="col-md-9">
                                        <select class="col-md-3 form-control select2-placeholder-product" id="single-placeholder" asp-items="ViewBag.ProductId"></select>
                                    </div>
                                    @*<div class="col-md-3">
                                   <input type="button" id="btnAdd" value="Nuevo" class="btn btn-primary btn-min-width mr-1 mb-1" />
                                </div>*@
                                    <div class="col-md-3">
                                        <input type="button" id="saveProduct" value="Guardar" class="btn btn-primary btn-min-width mr-1 mb-1" />
                                    </div>
                                </div>
                                <table class="table" id="tblProductos">
                                    <thead>
                                        <tr>
                                            <th>
                                                @Html.DisplayNameFor(model => model.PackageItem[0].Qty)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.PackageItem[0].Product.Code)
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.PackageItem[0].Product.Description)
                                            </th>
                                            </th>
                                            <th>
                                                @Html.DisplayNameFor(model => model.PackageItem[0].Description)
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.PackageItem)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Qty)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Product.Code)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Product.Description)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Description)
                                                </td>
                                                <td>
                                                    <a asp-page="./Edit" asp-route-id="@item.PackageItemId">Edit</a> |
                                                    <a asp-page="./Details" asp-route-id="@item.PackageItemId">Details</a> |
                                                    <a asp-page="./Delete" asp-route-id="@item.PackageItemId">Delete</a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>


                </div>
            </div>

            <h4 name="total" style="text-align:right;"><i class="icon-eye6"></i> Precio Total: 60</h4>
            <h4 name="total" style="text-align:right;"><i class="icon-eye6"></i> Balance: 10</h4>


            <div class="form-group center">
                <div class="col-md-6">
                    <a asp-page="Index" type="button" class="btn btn-warning btn-min-width mr-1 mb-1">Cancelar</a>
                </div>
            <div class="col-md-6">
                <input type="submit" value="Create" class="btn btn-primary btn-min-width mr-1 mb-1" />

            </div>
            </div>


        </form>
    </div>
</div>


