                                            <input asp-for="Order.CantLb" class="form-control" placeholder="Cantidad de lb." type="number" />
                                            <span asp-validation-for="Order.CantLb" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group ">
                                            <label asp-for="Order.PriceLb" class="control-label"></label>
                                            <input asp-for="Order.PriceLb" placeholder="Precio por lb" class="form-control" type="number" />
                                            <span asp-validation-for="Order.PriceLb" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>

